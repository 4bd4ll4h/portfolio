---
export interface Props {
	title: string;
	description?: string;
	image?: string;
	canonical?: string;
}

const { title, description = "Abdallah Abdelmahmoud - Software Engineer  specializing in AI-powered applications and mobile development", image = "/og-image.jpg", canonical } = Astro.props;
const canonicalURL = new URL(canonical ?? Astro.url.pathname, Astro.site);
import "../styles/theme.css";
import "../styles/global.css";
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg?v=2" sizes="any" />
		<link rel="shortcut icon" href="/favicon.svg?v=2" />
		<meta name="theme-color" content="#000000" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Early theme init to avoid flicker -->
		<script>
			try {
				var saved = localStorage.getItem('theme');
				document.documentElement.classList.toggle('dark', saved !== 'light');
			} catch (e) {}
		</script>
		
		<!-- Canonical URL -->
		<link rel="canonical" href={canonicalURL} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:site_name" content="Abdallah Abdelmahmoud" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(image, Astro.site)} />
		<meta property="og:image:alt" content={title} />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		
		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content={canonicalURL} />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={new URL(image, Astro.site)} />
		<meta name="twitter:image:alt" content={title} />
		
		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Sora:wght@400;500;600;700;800&family=Fira+Code:wght@400;500;600;700&family=Bebas+Neue&display=swap" rel="stylesheet" />
		<!-- Devicon for tech icons -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.15.1/devicon.min.css" />
		<!-- CSS imported via Astro bundler (theme + Tailwind globals) -->
		
		<title>{title}</title>
	</head>
	<body class="bg-white text-neutral-900 dark:bg-black dark:text-white transition-colors duration-300" style="--brand: var(--color-brand); --font-display: var(--font-display); --font-mono: var(--font-mono);">
		<slot />
		
		<!-- Theme Script -->
		<script>
			// Persist theme on toggle
			window.addEventListener('theme-change', () => {
				const isDark = document.documentElement.classList.contains('dark');
				const newTheme = isDark ? 'light' : 'dark';
				document.documentElement.classList.toggle('dark', newTheme === 'dark');
				localStorage.setItem('theme', newTheme);
			});
		</script>
	</body>
</html>
