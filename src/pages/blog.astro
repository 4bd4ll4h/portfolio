---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const categories = [
  { name: "UX Design Insights", slug: "ux-design", count: 1 },
  { name: "Project Case Studies", slug: "case-studies", count: 1 }
];

const blogPosts = [
  {
    title: "From UX Design to Development: Bridging the Gap",
    excerpt: "How my background in UX design has influenced my development approach, creating more intuitive and user-centered applications that bridge the gap between complex systems and user needs.",
    category: "UX Design Insights",
    date: "2024-01-10",
    readTime: "6 min read",
    featured: true,
    slug: "ux-design-to-development"
  },
  {
    title: "EEESE HACKATHON 2022 Winner: Building AI-Powered Classroom Scheduling",
    excerpt: "A detailed look at how Team 'Se7en' won the EEESE Hackathon 2022 by developing an innovative AI-powered web application using evolutionary algorithms and genetic optimization for university timetable management.",
    category: "Project Case Studies",
    date: "2022-12-15",
    readTime: "8 min read",
    featured: true,
    slug: "eeese-hackathon-2022-winner"
  }
];
---

<Layout title="Blog - Abdallah Abdelmahmoud" description="Technical articles, tutorials, and insights on AI-powered development, mobile applications, and full-stack solutions by Abdallah Abdelmahmoud.">
  <Navigation />
  
  <!-- Hero Section -->
  <section class="pt-24 pb-16 px-4 sm:px-6 lg:px-8 bg-gradient-to-br from-primary-50 to-accent-50 dark:from-primary-900/20 dark:to-accent-900/20">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-4xl sm:text-5xl font-display font-bold text-secondary-900 dark:text-white mb-6 animate-fade-in">
        Blog
      </h1>
      <p class="text-xl text-secondary-600 dark:text-secondary-300 leading-relaxed animate-slide-up">
        Insights, tutorials, and thoughts on AI-powered development, mobile applications, and creating digital ecosystems.
      </p>
    </div>
  </section>



  <!-- Featured Posts -->
  <section class="py-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-3xl font-display font-bold text-secondary-900 dark:text-white mb-12 text-center animate-slide-up">
        Featured Articles
      </h2>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        {blogPosts.filter(post => post.featured).map((post, index) => (
          <article 
            class="group bg-white dark:bg-secondary-800 rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden animate-scale-in hover:-translate-y-2"
            style={`animation-delay: ${index * 0.2}s`}
          >
            <div class="p-8">
              <div class="flex items-center space-x-2 mb-4">
                <span class="px-3 py-1 bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300 text-sm rounded-full font-medium">
                  {post.category}
                </span>
                <span class="text-secondary-500 dark:text-secondary-400 text-sm">
                  {post.readTime}
                </span>
              </div>
              
              <h3 class="text-2xl font-semibold text-secondary-900 dark:text-white mb-4 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
                {post.title}
              </h3>
              
              <p class="text-secondary-600 dark:text-secondary-300 mb-6 leading-relaxed">
                {post.excerpt}
              </p>
              
                             <div class="flex items-center justify-between">
                 <time class="text-sm text-secondary-500 dark:text-secondary-400">
                   {new Date(post.date).toLocaleDateString('en-US', { 
                     year: 'numeric', 
                     month: 'long', 
                     day: 'numeric' 
                   })}
                 </time>
                 <span class="text-primary-600 dark:text-primary-400 font-medium">
                   Coming Soon
                 </span>
               </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- All Posts -->
  <section class="py-16 px-4 sm:px-6 lg:px-8 bg-secondary-50 dark:bg-secondary-800/30">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-3xl font-display font-bold text-secondary-900 dark:text-white mb-12 text-center animate-slide-up">
        All Articles
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {blogPosts.map((post, index) => (
          <article 
            class="group bg-white dark:bg-secondary-800 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden animate-scale-in hover:-translate-y-1"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <div class="p-6">
              <div class="flex items-center space-x-2 mb-3">
                <span class="px-2 py-1 bg-secondary-100 dark:bg-secondary-700 text-secondary-700 dark:text-secondary-300 text-xs rounded-full font-medium">
                  {post.category}
                </span>
                <span class="text-secondary-500 dark:text-secondary-400 text-xs">
                  {post.readTime}
                </span>
              </div>
              
              <h3 class="text-lg font-semibold text-secondary-900 dark:text-white mb-3 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
                {post.title}
              </h3>
              
              <p class="text-secondary-600 dark:text-secondary-300 mb-4 leading-relaxed text-sm">
                {post.excerpt}
              </p>
              
                             <div class="flex items-center justify-between">
                 <time class="text-xs text-secondary-500 dark:text-secondary-400">
                   {new Date(post.date).toLocaleDateString('en-US', { 
                     year: 'numeric', 
                     month: 'short', 
                     day: 'numeric' 
                   })}
                 </time>
                 <span class="text-primary-600 dark:text-primary-400 text-sm font-medium">
                   Coming Soon
                 </span>
               </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <Footer />
</Layout>
